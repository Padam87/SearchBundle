    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="padam87_search.search_service.class">Padam87\SearchBundle\Service\SearchService</parameter>
    </parameters>

    <services>
        <service id="search" class="%padam87_search.search_service.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
